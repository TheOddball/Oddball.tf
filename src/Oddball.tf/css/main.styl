@import './productsans.styl'

body
  overflow hidden
  margin 0
  padding 0
  color #fff !important
  font-weight 300
  font-size 100%
  font-family 'Product Sans', Helvetica, Arial, sans-serif
  animation background-pan 5s linear infinite
  background linear-gradient(
    to right,
    #36bbf7,
    #702df9,
    #36bbf7
  )
  background-size 200%
  height 100%

  &.toggled
    animation background-pan 10s linear infinite

    & > #title
      opacity 0

    & > #tiles
      & > .tile
        &:hover
          opacity 0.1 !important

  &.menu-toggled
    & > .meta-link
      & > span
        color #1e1e1e

@keyframes background-pan
  from
    background-position 0% center

  to
    background-position -200% center

.main
  position relative
  top 50%
  text-align center
  transform translateY(25%)
  z-index 3
  pointer-events none

.avatarContainer
  width: max-content
  height: max-content
  margin: 0 auto
  border-radius: 100px
  filter drop-shadow(10px 10px 20px black)

.avatar
  width 15vh
  height 15vh
  border-radius 100px
  pointer-events all

.topping
  & > .container-top
    min-width 50%
    max-width 100%

.summary
  min-height 100vh

  & > h1
    font-weight 500
    animation gradient 3s ease infinite
    background-size 200% 100%
    animation-direction alternate
    width max-content
    border-radius 100px
    margin 20px auto
    filter drop-shadow(10px 10px 20px black)

.list-group
  text-align center

.tiles
  height calc(100% - 1px)
  width calc(100% - 1px)
  position absolute
  z-index 2
  display grid
  grid-template-columns repeat(var(--columns), 1fr)
  grid-template-rows repeat(var(--rows), 1fr)

.tile
  cursor pointer
  position relative

  &:hover
    &:before
      background-color #1e1e1e

  &:before
    background-color #0f0f0f
    content ''
    inset 0.5px
    position absolute

ul
  padding 10px
  margin 0 auto
  z-index 5
  position relative

  li
    display inline-block
    list-style-type none
    top 2px
    position relative
    pointer-events all

    img
      width 12vh
      transition all 0.2s ease-in-out
      position relative
      filter drop-shadow(10px 10px 20px black)

      &:hover
        transform scale(1.075)

@media only screen and (max-width: 700px)
  h1
    font-size: 350%

  ul
    width: 30vh
  
  li
    padding: 5px

@media only screen and (min-width 700px)
  h1
    font-size: 650%

  ul
    width: max-content
  
  li
    padding-left: 20px

    &:first-of-type
      padding-left 0
