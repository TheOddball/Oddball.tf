@import './productsans.styl'

body
  overflow hidden
  margin 0
  padding 0
  filter drop-shadow(10px 10px 20px black)
  background-position center
  background-size cover
  background-repeat no-repeat
  color #fff
  font-weight 300
  font-size 100%
  font-family 'Product Sans', Helvetica, Arial, sans-serif
  height 100%

footer
  position fixed
  bottom 0
  width 100%
  >a>img
    width 30px
    float right
    position relative
    right 5px
    bottom 5px

@keyframes gradient
  0%
    background-position 0%

  100%
    background-position 100%

.main
  position relative
  top 40%
  text-align center
  transform translateY(25%)

#avatar
  width 175px
  height 175px
  border-radius 100px

.topping
  & > .container-top
    margin-right auto
    margin-left auto
    min-width 50%
    max-width 75%

.summary
  min-height 75vh

  & > h1
    font-weight 500
    font-size 650%
    // background linear-gradient(45deg, #36bbf7 0%, #702df9 100%)
    animation gradient 3s ease infinite
    background-size 200% 100%
    animation-direction alternate
    width max-content
    border-radius 100px
    margin 20px auto

h3
  font-size 250%

.list-group
  text-align center

.ulshadow
  margin: 0 auto
  border-radius: 100px
  background linear-gradient(45deg, #B4B4B4 0%, #7C4CDE 100%)
  filter blur(12px)
  animation gradient 3s ease infinite
  background-size 200% 100%
  animation-direction alternate
  position: relative
  z-index 1
  height 175px

  &:first-of-type
    width 610px
  
  &:last-of-type
    width 490px
    top -160px
    

ul
  padding 10px
  background linear-gradient(45deg, #B4B4B4 0%, #7C4CDE 100%)
  animation gradient 3s ease infinite
  background-size 200% 100%
  animation-direction alternate
  border-radius 100px
  margin 0 auto
  width max-content
  z-index 5
  position: relative
  top -160px

  &:last-of-type
    top -320px

  li
    display inline-block
    padding-left 25px
    list-style-type none
    top 2px
    position relative

    &:first-of-type
      padding-left 0

    img
      width 125px
      opacity 0.8
      transition all 0.4s ease-in-out
      position relative

      &:hover
        transform scale(1.025)
