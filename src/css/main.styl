body
  overflow hidden
  margin 0
  padding 0
  background-position center
  background-size cover
  background-repeat no-repeat
  color #7f0000
  font-weight 300
  font-size 100%
  font-family 'Roboto', sans-serif
  background-image: url('./img/site/bg.png')

.main
  position relative
  top 45%
  text-align center
  transform translateY(25%)

#avatar
  width 175px
  height 175px
  border-radius 100px

.topping
  & > .container-top
    margin-right auto
    margin-left auto
    min-width 50%
    max-width 75%

.summary
  min-height 75vh
  & > h1
    font-weight 100
    font-size 650%
    margin 0

h3
  font-size 250%

.list-group
  text-align center

ul
  padding 0
  li
    display inline-block
    padding-left 25px
    list-style-type none
    img
      width 125px
      transition all 0.4s ease-in-out
      &:hover
        transform scale(1.025) rotate(0.1deg)
